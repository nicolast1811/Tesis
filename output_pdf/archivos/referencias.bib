	number = {1},
	urldate = {2024-11-05},
	journal = {Pensamiento Educativo: Revista de Investigación Educacional Latinoamericana},
	author = {Garretón, Matías and Sanfuentes, Matias and Valenzuela, Juan Pablo and Núñez, Isabel Margarita},
	year = {2022},
	pages = {1--18},
	file = {PDF:C\:\\Users\\nicot\\Zotero\\storage\\S5YMWZV5\\Universidad Adolfo Ibáñez (Chile) et al. - 2022 - Brechas y desafíos organizacionales en la implementación temprana de la Nueva Educación Pública en C.pdf:application/pdf},
}

